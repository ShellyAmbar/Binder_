<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/linearLayoutSplashBack"
    android:background="@drawable/back_splash"
    tools:context=".EnterActivities.SplashActivity">

    <ImageView

        android:id="@+id/imgLog"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/binder_logo_white" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="invisible"
            android:text="Explore . "
            android:textSize="25dp"
            android:textColor="@color/colorMediumGreen"

            android:id="@+id/subTextFirst"
            android:layout_marginEnd="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="invisible"
        android:text="Visit . "
        android:textSize="25dp"
            android:layout_marginEnd="3dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/subTextSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:layout_marginEnd="3dp"
            android:visibility="invisible"
            android:text="Make a CHANGE. "
            android:textSize="25dp"
            android:textColor="@color/colorMediumPink"
            android:textStyle="bold"
            android:id="@+id/subTextThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>